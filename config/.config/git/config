[init]
    defaultBranch = main
[core]
    editor = nvim
    pager = delta
[delta]
    navigate = true
    light = false
[diff]
    colorMoved = default
[interactive]
    diffFilter = delta --color-only
[merge]
    tool = vimdiff
    conflictStyle = diff3
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    frag = magenta bold
    meta = yellow bold
    new = green bold
    old = red bold
    whitespace = red reverse
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[help]
    autoCorrect = immediate
[includeIf "gitdir:~/"]
    path = ~/git/.gitconfig
[includeIf "gitdir:~/projects/"]
    path = ~/projects/.gitconfig
[rerere]
    enabled = true
