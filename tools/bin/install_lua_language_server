curl -LO "https://github.com/LuaLS/lua-language-server/releases/latest/download/lua-language-server-3.13.9-linux-x64.tar.gz"
LUA_LANGUAGE_SERVER_DIR="$HOME/.local/opt/lua-language-server"
test -d $LUA_LANGUAGE_SERVER_DIR || mkdir -p $LUA_LANGUAGE_SERVER_DIR
tar xvzf "lua-language-server-3.13.9-linux-x64.tar.gz" --one-top-level=$LUA_LANGUAGE_SERVER_DIR
rm "lua-language-server-3.13.9-linux-x64.tar.gz"
