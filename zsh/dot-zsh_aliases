
alias l="eza"
alias ll="eza --long"
alias cat="bat"
alias ps="procs"
alias ez="nvim ~/.zshrc"
alias gensecret="openssl rand -hex 40"
alias vim="nvim"

# Python aliases
alias pipi="python -m pip install"
alias pipr="python -m pip install -rrequirements.txt"
alias pipe="python -m pip install -e ."
alias whichpy="pyenv which python"
alias ma='mamba activate `mamba env list | tail -n+3 | cuts -f3 | fzf`'
alias mA='mamba deactivate'
alias mc="mamba create"
alias mf="mamba env create -y -f environment.yml"
alias mu="mamba env update --prune -f environment.yml"
alias ml="mamba env list"
alias mr="mamba env remove -n"
alias ipk="python -m ipykernel install --user --name"
alias pt="pytest"
alias lab="jupyter lab --no-browser"
alias servewd="pyserver -b 127.0.0.1 -d . 9000"

# https://github.com/stefanjudis/dotfiles/blob/primary/config/oh-my-zsh/aliases.zsh
alias ip="echo Your ip is; dig +short myip.opendns.com @resolver1.opendns.com;"
alias -s {js,json,env,md,html,css,toml,yaml,yml}=cat # cat pyproject.toml -> pyproject.toml
alias -s {csv,tsv}="csvlook | less" # cat pyproject.toml -> pyproject.toml
alias -s git="git clone" # git clone git@github.com:wjs20/dotfiles.git -> git@github.com:wjs20/dotfiles.git
alias get='http --follow --timeout 6'
alias c='clear'
alias cls='clear && ls'
alias cuts="cut -d \" \""
alias cutc="cut -d \",\""
alias tarup="tar -zcf"
alias tardown="tar -zxf"
alias showpath='echo $PATH | tr ":" "\n" | nl'


alias comp='compdef _gnu_generic'

alias today='date "+%Y-%m-%d"'
